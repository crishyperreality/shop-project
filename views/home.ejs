<body class="bg">
    <!-- Reutilizamos la vista navbar.ejs-->
    <%- include('navbar'); -%>

    <div class="container-fluid">
        <div class="row">
          <!-- Margin-top con propiedades de bootstrap para que el navbar no pise el carousel-->
          <!-- Para el diseño responsive de la pagina
                col (por defecto): para movil
                col-sm: para tablets de varios tamaños (a partir de 479px)
                col-lg: para ordenadores (a partir de 992px)
            -->
            <div class="col-12 carousel-column carousel-bg mt-5">
