          </div>
        </div>
      </div>
    </div>
   <!-- Utilizamos container en lugar de container-fluid para que no ocupe todo el ancho de pantalla, ahorrando poner márgenes --> 
    <div class="container">
      <div class="row">
        <!-- Se reutiliza la clase section-title para todos los titulos (h1) de la web -->
        <div class="col-12 section-title">
          <h1>Our Sellers</h1>
        </div>
      </div>
      <div class="row">
        <!-- results.forEach define la funcion seller, que define con el mismo nombre todos los métodos invocados para results (todos los vendedores)-->
        <% results.forEach (function (seller){ %>
          <div class="col-12 col-sm-6 col-lg-4 mb-5">
            <div class="card">
              <!-- Link que redirige al perfil de vendedor que referencia la card pulsando en cualquier parte de ella -->
              <a href="/profile/<%= seller.id_seller %>">
                <div class="card-body">
                  <img src="/sellersImages/<%= seller.image %>" class="card-img-top" alt="...">
                  <h5 class="card-title"><%= seller.name %> <%= seller.surname %></h5>
                  <h6 class="card-text"><%= seller.email %></h6>
                  <p class="card-text"><%= seller.description %></p>
                  <h6 class="card-text"><%= seller.phone_number %></h6>
                  <div class="button-group">
                    <a href="/editSeller/<%= seller.id_seller %>" class="btn btn-transparent2 btn-light">Edit</a>
                    <a href="/deleteSeller/<%= seller.id_seller %>" class="btn btn-transparent3 btn-light">Delete</a>
                  </div>
                </div>
              </a>
            </div> 
          </div>
        <% }) %>
      </div>  
    </div>

    <!-- Reutilizamos la vista footer -->
    <%- include('footer'); -%>


